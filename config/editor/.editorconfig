# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[{.,}*.{js{,*},y{a,}ml}]
indent_style = space
indent_size = 2

[{*.json,*.js}]
indent_style = space
indent_size = 2

[*.{htm,html}]
indent_size = 4

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = true
indent_style = space
max_line_length = off

[*.yml]
indent_style = space
indent_size = 2

[*.xml]
indent_size = 4

[*.py]
indent_size = 4

[*.{cs,java}]
indent_size = 4

[*.{md,mdx,markdown,txt}]
trim_trailing_whitespace = false

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 2

[NAME]
insert_final_newline = false

[VERSION]
insert_final_newline = false